<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/car_item_cover"
            android:layout_width="232dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/car_item_car"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="242dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/colorSecondary"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="242dp"
                android:layout_marginTop="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="start"
                    android:text="@string/carlistItemPrice"
                    android:textColor="@color/colorSecondary"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/car_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/ubuntu_regular"
                    android:paddingRight="12dp"
                    android:paddingBottom="2dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorSecondaryDarkText"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="242dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="start"
                    android:text="@string/carlistItemBrand"
                    android:textColor="@color/colorSecondary"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/car_item_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/ubuntu_regular"
                    android:paddingRight="12dp"
                    android:paddingBottom="2dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorSecondaryDarkText"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="242dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="start"
                    android:text="@string/carlistItemType"
                    android:textColor="@color/colorSecondary"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/car_item_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/ubuntu_regular"
                    android:paddingRight="12dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorSecondaryDarkText"
                    android:textSize="24dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>